{% extends 'base.html.twig' %}

{% block body %}
    <h1>Exams list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Album</th>
                <th>Titrealbum</th>
                <th>Artiste</th>
                <th>Genre</th>
                <th>Support</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exam in exams %}
            <tr>
                <td><a href="{{ path('exam_show', { 'id': exam.id }) }}">{{ exam.id }}</a></td>
                <td>{{ exam.album }}</td>
                <td>{{ exam.titreAlbum }}</td>
                <td>{{ exam.artiste }}</td>
                <td>{{ exam.genre }}</td>
                <td>{{ exam.support }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('exam_show', { 'id': exam.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('exam_edit', { 'id': exam.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('exam_new') }}">Create a new exam</a>
        </li>
    </ul>
{% endblock %}
